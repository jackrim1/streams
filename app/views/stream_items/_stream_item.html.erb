

<div class="row clearfix">
  <% if stream_item.completed? %>
  <div class="complete">
    <%= link_to "Mark as complete", complete_stream_list_stream_item_path(@stream_list, stream_item.id), method: :patch %>
  </div>
  <div class="stream_item">
    <p style="opacity: 0.4;"><strike><%= stream_item.content %></strike></p>
  </div>
  <div class="trash">
    <%= link_to "Delete", stream_list_stream_item_path(@stream_list, stream_item.id), method: :delete, data: {confirm: "Are you sure?"} %>
  </div>
  <% else %>
  <div class="complete">
    <%= link_to "Mark as complete", complete_stream_list_stream_item_path(@stream_list, stream_item.id), method: :patch %>
  </div>
  <div class="stream_item">
    <p><%= stream_item.content %></p>
  </div>
  <div class="trash">
    <%= link_to "Delete", stream_list_stream_item_path(@stream_list, stream_item.id), method: :delete, data: {confirm: "Are you sure?"} %>
  </div>
  <% end %>
</div>